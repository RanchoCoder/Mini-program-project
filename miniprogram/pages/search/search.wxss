.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.search-form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.search-input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.search-btn {
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.reset-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  color: #666;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.result-wrap {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.car-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.car-item:last-child {
  border-bottom: none;
}

.car-img {
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.car-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.car-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.car-price {
  font-size: 28rpx;
  color: #f60;
}

.car-mileage {
  font-size: 26rpx;
  color: #999;
}

.no-result {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 50rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}