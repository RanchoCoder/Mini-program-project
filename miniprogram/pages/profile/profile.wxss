.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.avatar-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.avatar-btn {
  padding: 0;
  background: none;
  border: none;
  width: 200rpx;
  height: 200rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.tip {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.nick-wrap {
  margin-bottom: 80rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.nick-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border: none;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.save-btn[disabled] {
  background: #cccccc !important;
  color: #ffffff !important;
}